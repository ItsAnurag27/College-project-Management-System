# Shared JWT secret for MVP (HS256). Change for any real deployment.
JWT_SECRET=dev_super_secret_change_me

# Optional: one-time key to allow creating the first root admin via /auth/register.
# Leave empty to disable root admin registration.
ROOT_ADMIN_KEY=

# Host port for the API gateway (change if 8090 is also busy)
GATEWAY_PORT=8090

# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Service DB names
AUTH_DB=auth_db
PROJECT_DB=project_db
TASK_DB=task_db
NOTIF_DB=notif_db

# Email OTP (auth-service)
# If MAIL_HOST is empty, OTP codes will be logged to the auth-service console.
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=no-reply@unitify.local

# Optional tuning
OTP_TTL_MINUTES=10
OTP_MAX_ATTEMPTS=5
OTP_RATE_EMAIL_10MIN=3
OTP_RATE_EMAIL_DAY=10
OTP_RATE_IP_10MIN=15
